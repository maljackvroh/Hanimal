    <script>
      document.addEventListener('DOMContentLoaded', function() {
    const pathName = window.location.pathname; // Ambil path dari URL saat ini
    
    const sidebarLinks = document.querySelectorAll('.ha-sidebar a');
    sidebarLinks.forEach(link => {
        const linkPath = link.getAttribute('href'); // Ambil path dari href link
        
        // Cocokkan pathName dengan linkPath untuk menentukan link yang aktif
        if (pathName === linkPath) {
            link.classList.add('active');
        } else {
            link.classList.remove('active');
        }
    });
});

    </script>
