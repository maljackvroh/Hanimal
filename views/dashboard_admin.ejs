                            <label for="editEmail_user2">Email:</label>
                            <input type="email" id="editEmail_user2" value="user2@example.com" required><br>
                            <label for="editGender_user2">Gender:</label>
                            <select id="editGender_user2" required>
                                <option value="male">Male</option>
                                <option value="female" selected>Female</option>
                            </select><br>
                            <button type="button" onclick="updateUser('user2')">Update</button>
                            <button type="button" onclick="closeEditPanel('user2')">Close</button>
                        </form>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

